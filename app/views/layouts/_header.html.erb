<header class="navbar navbar-fixed-top navbar-inverse navbar-fluide">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to t(:app_name), root_path, id: "logo" %>
      
      <nav>
        <ul class="nav pull-right">
          <li id="fat-menu" class="dropdown">
              <%= link_to t("header.event.title"), events_path%>
            </li>
          <% if signed_in? %>
            <% if can? :access, :rails_admin%>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= t("header.admin.title")%><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to t("header.admin.dashboard"), rails_admin.dashboard_path%>
                </li>
                <li>
                  <%= link_to t("header.admin.users"), users_path%>
                </li>
                <li>
                  <%= link_to t("header.admin.email"), rails_admin.dashboard_path%>
                </li>
              </ul>
            </li>
            <% end %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= t("header.account.title")%><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("header.account.profile"), current_user %></li>
                <li><%= link_to t("header.account.settings"), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("header.account.sign_out"), signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("header.signin"), signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>